generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  username String @unique @db.VarChar(191)
  password String
  role     Role   @default(Editor)
}

model Pages {
  id          Int    @id @default(autoincrement())
  title       String @unique
  author      String
  category    String
  contentPath String @unique
}

enum Role {
  Editor
  Admin
}

model Categories {
  id       Int    @id @default(autoincrement())
  name     String @unique
}

model DirectPages {
  id    Int    @id @default(autoincrement())
  title String @unique
}
